{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "allowJs": false,
        "typeRoots": [
            "typings"
        ],
        "lib": [
            "dom",
            "es6",
            "es2018.promise"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "typings",
        "node_modules",
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}